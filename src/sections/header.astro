}
import Elfilogo from "@/components/Elfilogo.astro";
---

<style>
  header {
    @apply bg-transparent dark:bg-transparent shadow-md py-4 px-6;
  }

  .container {
    @apply flex justify-between items-center mx-auto max-w-7xl;
  }

  .nav {
    @apply hidden md:flex space-x-8;
  }

  .nav a {
    @apply text-gray-700 dark:text-gray-300 hover:text-blue-600 transition-colors;
  }

  .icons {
    @apply flex items-center space-x-4;
  }

  .menu-btn {
    @apply md:hidden text-gray-700 dark:text-gray-300;
  }

  .mobile-nav {
    @apply md:hidden absolute top-16 left-0 w-full bg-white dark:bg-gray-900 shadow-md flex flex-col items-center py-4 space-y-4;
  }
</style>

